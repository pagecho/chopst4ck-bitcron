extends base.jade

block title
	title= post.title + " - " + site.title
block postneck
	style
		#header {
			background: #fff;
		}
	if post.cover
		.neck-cover(style="background:#f5f5f5 url({{post.cover(width=1500)}}) center;background-size:cover;")
		style
			#layout {
				padding-top:56px;
			}
			.post-lady {
				margin-top:0!important;
			}
			.post-page .post-title-position-box .post-header-title {
				color:#222!important;
			}
	else
		style
			.post-layout {
				margin-top:11.3em;
			}
			.post-header-title {
				color: #333!important;
			}
			.post-date {
				color: #000!important;
			}
block content
	.post-layout
		.body_container:.pure-g
			.hidden-if-min.pure-u-sm-1-16.pure-u-md-1-6
				.post-aside
			.pure-u-1.pure-u-sm-7-8.pure-u-md-2-3.post-body
				.post
					.post-title-position-box
						.post-date= post.date.format('%b %d')
						h1.post-header-title= post.title
					.post-content= post.content
					if post.tags
						.tags
							for tag in post.tags
								a(href="/tag/{{tag}}")= tag
					+post.comments_as_html()
					
	style
		#header #nav-menu .site_nav li:first-child a {
			border-top:2px solid #000;
		}