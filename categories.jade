extends base.jade
block content
	.body_container:#categories:.pure-g
		for category in  get_data(type='folder', level=[1,2], min_posts_count=1)
			.pure-u-1.pure-u-sm-1-2.pure-u-md-1-3:.category
				a(href="/category/{{ category.path }}")
					.category-cover-box
						if category.cover_url
							.category-cover(style="background-image:url({{category.cover_url.resize(width=640)}})")
						else
							.category-cover.category-cover-empty
					h2= category.title
					span= '%s %s' % (category.posts_count, 'post' if category.posts_count==1 else 'posts')